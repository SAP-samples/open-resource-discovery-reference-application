{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "src/*": ["src/*"]
    },
    "types": ["node"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "deps"]
}
