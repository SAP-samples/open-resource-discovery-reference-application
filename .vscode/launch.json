  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Server",
      "type": "node",
      "request": "launch",
      "args": ["src/server.ts"],
      "runtimeArgs": ["--import", "tsx/esm"],
      "console": "integratedTerminal"
    },
    {
      "name": "Debug current TS File",
      "type": "node",
      "request": "launch",
      "args": ["${relativeFile}"],
      "runtimeArgs": ["--import", "tsx/esm"],
      "console": "integratedTerminal"
    }
  ]
}
